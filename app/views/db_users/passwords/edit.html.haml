/ Content Header (Page header)
%section.content-header
  %h1
    Password
/ Main content
%section.content.container-fluid
  .row
    .col-md-6
      / Horizontal Form
      .box.box-info
        .box-header.with-border
          %h3.box-title Change your password
        / /.box-header
        / form start
        = form_for(resource, as: resource_name, url: password_path(resource_name), :html => { method: :put, class: 'form-horizontal' }) do |f|
          = devise_error_messages!
          = f.hidden_field :reset_password_token
          .box-body
            .form-group.has-feedback
              %label.col-sm-2.control-label{:for => "inputPassword3"} New Password
              - if @minimum_password_length
                %em
                  (#{@minimum_password_length} characters minimum)
                %br/
              .col-sm-10
                = f.password_field :password, autocomplete: "off", :id =>"inputPassword3", :class => "form-control"
                %span.glyphicon.glyphicon-lock.form-control-feedback
            .form-group.has-feedback
              %label.col-sm-2.control-label{:for => "inputPassword4"} Confirm new password
              .col-sm-10
                = f.password_field :password_confirmation, autocomplete: "off", :id =>"inputPassword4", :class => "form-control"
                %span.glyphicon.glyphicon-lock.form-control-feedback
            / /.box-body
            .box-footer
              = f.submit "Update", :class => "btn btn-primary btn-block btn-flat"
            / /.box-footer
            .box-body
              .form-group
                = render "devise/shared/links"
    / /.login-box-body
    / /.content
